	"React Native Button": {
		"prefix": "btn",
		"body": [
			"<TouchableOpacity style={{ width: \"60%\", height: 40 }}>",
			"    <View flex={1} backgroundColor={\"#F00\"}",
			"        alignItems={\"center\"} justifyContent={\"center\"}>",
			"        <Text style={{",
			"            fontSize: 14,",
			"            fontWeight: \"bold\",",
			"            color: \"#FFF\",",
			"        }}>${btnTitle}</Text>",
			"    </View>",
			"</TouchableOpacity>"
		],
		"description": "React Native Button"
	},
	"React Empty Page": {
		"prefix": "init_empty",
		"body": [
			"<MPSGLayout>",
			"\t<div className={\"h2\"}>This is ${name} Page</div>",
			"</MPSGLayout>"
		],
		"description": "React Empty Page"
	},
	"Init Empty Page": {
		"prefix": "init",
		"body": [
			"<SafeAreaView style={{ flex: 1 }}>\r",
			"            <View style={{ flex: 1 }}>\r",
			"\r",
			"                {/* Header */}\r",
			"                <View style={{ height: 80 }} />\r",
			"\r",
			"                <View style={{ height: 10 }} />\r",
			"\r",
			"                {/* Body */}\r",
			"                <ScrollView showsVerticalScrollIndicator={false}>\r",
			"                    <VStack space={2}>\r",
			"                    </VStack>\r",
			"                </ScrollView>\r",
			"\r",
			"                {/* Footer */}\r",
			"                <View style={{ height: 80 }} />\r",
			"            </View>\r",
			"        </SafeAreaView>"
		],
		"description": "Init Empty Page"
	}
}